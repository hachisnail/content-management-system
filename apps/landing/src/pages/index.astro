---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-4xl font-bold text-primary mb-4">
    Hello Astro + daisyUI ðŸŒ¼
  </h1>

  <a href="/articles" class="btn btn-primary mr-2" data-astro-prefetch>
    Articles
  </a>

  <button id="btn" class="btn btn-secondary">
    Toggle Alert
  </button>

  <div
    id="alert"
    class="alert alert-success mt-4 hidden"
  >
    This is a daisyUI alert!
  </div>

  <script>
    const alertBox = document.getElementById("alert");
    const btn = document.getElementById("btn");

    if (!alertBox || !btn) {
      console.warn("DOM not ready or elements missing");
    } else {
      btn.addEventListener("click", () => {
        alertBox.classList.toggle("hidden");
      });
    }
  </script>
</Layout>
