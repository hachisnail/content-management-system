---
import Layout from "../layouts/Layout.astro";
import MuseumCalendar from "../components/MuseumCalendar.jsx";
import { getArticles, getCollections, getEvents } from "../data/store";

const recentArticles = getArticles().slice(0, 3);
const featuredCollections = getCollections();
const events = getEvents();
---

<Layout>
  <section class="relative h-screen w-full overflow-hidden flex items-center justify-center">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-[#0a0a0a] z-10"></div>
      <img src="https://images.unsplash.com/photo-1547296017-978c31e1c124?q=80&w=2000" class="w-full h-full object-cover scale-105 animate-slow-pan" alt="Museum Hall" />
    </div>

    <div class="relative z-20 text-center px-4 max-w-5xl mx-auto mt-20">
      <div class="mb-6 inline-block border-b border-museum-gold pb-2">
         <span class="text-museum-gold uppercase tracking-[0.3em] text-xs font-bold">Camarines Norte Provincial Museum</span>
      </div>
      <h1 class="font-serif text-6xl md:text-8xl text-white mb-8 leading-none tracking-tight">
        History <br/> <span class="italic text-museum-gold">Live & Online</span>
      </h1>
      <p class="text-gray-300 font-light text-xl mb-12 max-w-2xl mx-auto leading-relaxed">
        Read our latest research online, check our event schedule, or visit to see the artifacts that shaped our province.
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center items-center">
        <a href="#calendar" class="btn bg-museum-gold text-black hover:bg-white border-none rounded-none uppercase tracking-widest px-8 py-4 h-auto min-w-[200px]">
          View Schedule
        </a>
        <a href="/visit" class="btn btn-outline border-white text-white hover:bg-white hover:text-black rounded-none uppercase tracking-widest px-8 py-4 h-auto min-w-[200px]">
          Plan a Visit
        </a>
      </div>
    </div>
  </section>

  <section id="calendar" class="py-24 bg-[#0a0a0a] border-b border-white/5">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
        
        <div class="lg:col-span-4">
          <span class="text-museum-gold uppercase tracking-widest text-sm font-bold">What's On</span>
          <h2 class="font-serif text-5xl text-white mt-4 mb-8">Museum Schedule</h2>
          <p class="text-gray-400 text-lg leading-relaxed mb-8">
            Stay updated with our lecture series, workshop dates, and public holidays. 
            <br/><br/>
            <span class="text-white italic">Note:</span> The museum is closed on Mondays for maintenance.
          </p>
          
          <div class="bg-neutral-900 border border-white/10 p-6">
            <h3 class="text-white font-serif text-xl mb-4">Upcoming Highlights</h3>
            <ul class="space-y-4">
              {events.slice(0, 3).map(ev => (
                <li class="flex gap-4 border-b border-white/5 pb-4 last:border-0">
                  <div class="text-center bg-white/5 p-2 min-w-[60px]">
                    <span class="block text-xs text-gray-500 uppercase">{ev.date.split('-')[1]}</span>
                    <span class="block text-xl text-museum-gold font-bold">{ev.date.split('-')[2]}</span>
                  </div>
                  <div>
                    <h4 class="text-white font-serif text-lg leading-none mb-1">{ev.title}</h4>
                    <span class="text-xs text-gray-500 uppercase tracking-wider">{ev.type}</span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="lg:col-span-8">
          <MuseumCalendar client:load events={events} />
        </div>

      </div>
    </div>
  </section>

  <section class="py-24 bg-neutral-950 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <span class="text-museum-gold uppercase tracking-widest text-sm">News & Research</span>
        <h2 class="font-serif text-4xl text-white mt-4">Latest Stories</h2>
        <p class="text-gray-500 mt-4">Full articles and announcements available online.</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {recentArticles.map((article) => (
          <article class="flex flex-col md:flex-row bg-white/5 border border-white/5 hover:border-museum-gold/30 transition-all group">
            <div class="md:w-1/3 h-64 md:h-auto overflow-hidden relative">
              <img src={article.image} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700" alt={article.title} />
            </div>
            <div class="p-8 md:w-2/3 flex flex-col justify-center">
              <span class="text-xs text-museum-gold uppercase tracking-widest mb-3">{article.category}</span>
              <h3 class="font-serif text-2xl text-white mb-3 group-hover:text-museum-gold transition-colors">{article.title}</h3>
              <p class="text-gray-400 text-sm line-clamp-2 mb-6">{article.excerpt}</p>
              <a href={`/articles/${article.id}`} class="text-white text-xs uppercase tracking-widest border-b border-white/20 hover:border-museum-gold self-start pb-1">Read Full Article</a>
            </div>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/articles" class="btn btn-outline text-white border-white/20 hover:bg-museum-gold hover:text-black hover:border-museum-gold rounded-none uppercase tracking-widest">
          View Archive
        </a>
      </div>
    </div>
  </section>

  <section id="collections" class="py-24 bg-[#0a0a0a] relative border-t border-white/5">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-end mb-16">
        <div>
          <span class="text-museum-gold uppercase tracking-widest text-sm font-bold">Physical Archives</span>
          <h2 class="font-serif text-4xl md:text-5xl text-white mt-4">The Collections</h2>
        </div>
        <p class="text-gray-500 max-w-md text-right mt-4 md:mt-0 italic">
          "These artifacts are preserved exclusively within our walls."
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredCollections.map((collection) => (
          <div class="group relative bg-neutral-900 border border-white/5 hover:border-museum-gold/50 transition-colors duration-500 overflow-hidden">
            <div class="h-80 overflow-hidden relative">
               <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-all z-10"></div>
               <img src={collection.image} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 grayscale" alt={collection.title} />
               
               <div class="absolute top-4 right-4 bg-black/80 backdrop-blur-md px-3 py-1 border border-white/10 z-20">
                 <span class="text-[10px] uppercase tracking-widest text-museum-gold">In-Person Only</span>
               </div>
            </div>

            <div class="p-8">
              <span class="text-xs text-gray-500 uppercase tracking-wider block mb-2">{collection.period}</span>
              <h3 class="font-serif text-2xl text-white mb-4 group-hover:text-museum-gold transition-colors">{collection.title}</h3>
              <p class="text-gray-400 text-sm leading-relaxed mb-6">
                {collection.description}
              </p>
              <div class="flex items-center text-museum-gold text-xs uppercase tracking-widest font-bold opacity-60 group-hover:opacity-100 transition-opacity">
                <span>Plan Your Visit</span>
                <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes slow-pan {
    0% { transform: scale(1.05); }
    100% { transform: scale(1.15); }
  }
  .animate-slow-pan {
    animation: slow-pan 20s ease-in-out infinite alternate;
  }
</style>