---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="min-h-screen bg-[#0a0a0a]">
    <div class="py-20 px-6 text-center border-b border-white/5 bg-neutral-900">
      <span class="text-museum-gold uppercase tracking-widest text-sm">Preservation Initiative</span>
      <h1 class="font-serif text-5xl text-white mt-4 mb-6">Contribute to the Archive</h1>
      <p class="text-gray-400 max-w-2xl mx-auto leading-relaxed">
        Ensure the preservation of your heirloom for future generations.
      </p>
    </div>

    <div class="container mx-auto px-6 py-20 max-w-4xl">
      <div class="bg-neutral-950 border border-white/10 p-8 md:p-16 relative">
        <div class="absolute top-0 left-0 w-24 h-24 border-l-4 border-t-4 border-museum-gold/20"></div>

        <h3 class="font-serif text-3xl text-white mb-8 border-b border-white/10 pb-4">Artifact Submission Form</h3>

        <form class="space-y-10">
          
          <div>
            <h4 class="text-museum-gold text-sm uppercase tracking-widest mb-6 font-bold">1. Donor Information</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">Full Name</legend>
                <input type="text" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" placeholder="Juan Dela Cruz" required />
              </fieldset>
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">Email Address</legend>
                <input type="email" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" placeholder="email@example.com" required />
              </fieldset>
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">Phone</legend>
                <input type="tel" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" />
              </fieldset>
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">City / Municipality</legend>
                <input type="text" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" />
              </fieldset>
            </div>
          </div>

          <div>
            <h4 class="text-museum-gold text-sm uppercase tracking-widest mb-6 font-bold">2. Object Details</h4>
            
            <fieldset class="fieldset mb-6">
              <legend class="fieldset-legend text-gray-500 text-xs">Title / Name of Object</legend>
              <input type="text" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold font-serif text-xl" placeholder="e.g., 19th Century Panning Bowl" />
            </fieldset>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">Approximate Age</legend>
                <input type="text" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" placeholder="e.g., Late 1800s" />
              </fieldset>
              <fieldset class="fieldset">
                <legend class="fieldset-legend text-gray-500 text-xs">Place of Origin</legend>
                <input type="text" class="input w-full bg-transparent border-b border-white/20 text-white rounded-none px-0 focus:outline-none focus:border-museum-gold" placeholder="e.g., Paracale" />
              </fieldset>
            </div>

            <fieldset class="fieldset mb-6">
              <legend class="fieldset-legend text-gray-500 text-xs">Description & Condition</legend>
              <textarea class="textarea w-full h-24 bg-white/5 border border-white/10 text-white rounded-none focus:outline-museum-gold" placeholder="Describe materials, dimensions, etc..."></textarea>
            </fieldset>

            <fieldset class="fieldset">
               <legend class="fieldset-legend text-gray-500 text-xs">Upload Photos</legend>
               <input type="file" class="file-input w-full bg-white/5 border border-white/10 text-white rounded-none" />
            </fieldset>
          </div>

          <div class="pt-6">
            <button class="btn bg-white text-black hover:bg-museum-gold border-none rounded-none uppercase tracking-widest px-12 py-4 w-full md:w-auto">
              Submit for Curator Review
            </button>
          </div>

        </form>
      </div>
    </div>
  </section>
</Layout>